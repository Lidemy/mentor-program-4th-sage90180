<head>
  <%- include ('./templates/head') %> 
</head>

<body>
  <%- include ('./templates/navbar') %> 
  
  <%- include ('./templates/banner') %> 
  <div class="container">
    <div class="posts">
      <article class="post">
        <div class="post__header">
          <div class="post__title"><%= article.title %></div>
          <% if(username){ %>
            <a class="post__action" href="/update/<%= article.id %>">編輯</a>
          <% } else { %>
          <% } %>
        </div>
        <div class="post__info">
          <%= article.createdAt %>
        </div>
        <div class="mt-3"><%= article.content %></div>
        <div class="edit-post__btn-wrapper mt-3">
          <button onclick="history.back()" type="button" class="edit-post__btn">上一頁</button>
        </div>
      </article>
    </div>
  </div>



  <%- include ('./templates/footer') %> 
  <%- include ('./templates/script') %> 
</body>